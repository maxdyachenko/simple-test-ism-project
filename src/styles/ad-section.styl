.not-ad-wrap
	padding-bottom 180px
	.icon
		text-align center
	.lnr-cart
		text-align center
		color COLOR_BRAND_WHITE
		font-size 120px
	.content
		position relative
		max-width 640px
		margin 30px auto 0 auto
		border 1px solid COLOR_BRAND_LIGHT_ORANGE2
		padding 5px
		overflow hidden
	.title
		color COLOR_BRAND_DARK_GREY2
		font 400 18px / 1.3 'Catamaran'
	.price
		margin-top 10px
		color COLOR_BRAND_GREEN
		font 400 30px / 1.2 'Open Sans'
		small
			position relative
			top -7px
			font-size 20px
	.center
		position absolute
		top 50%
		left 50%
		transform translate3d(-50%,-50%,0)
		display inline-block
		padding 22px 25px
		background COLOR_BRAND_GREEN
		border-radius 5px
	.cart-title
		text-align center
		color COLOR_BRAND_WHITE
		font 400 30px / 1.2 'Gotham XLight'
	.block-65
		width 65%
		&:after
			width 200px

	.block-35
		width 35%
		&:after
			height 130px
	.block
		position relative
		&:after
			position absolute
			content ''
			border-style solid
			border-color COLOR_BRAND_GREEN
			border-width 0 0 0 0
		img
			height 100%
		&.left-top
			display flex
			align-items center
			flex-direction row-reverse
			justify-content flex-end
			padding 10px 30px 4px 10px
			float left
			&:after
				bottom 0
				border-bottom-width 1px
			img
				width 250px
			.text-content
				width 61px
				margin-top 17px
				margin-right 15px
		&.right-top
			display flex
			align-items center
			flex-direction column-reverse
			float right
			padding 46px 0 49px 25px
			img
				width 110px
			.price
				margin 10px 0
			&:after
				border-left-width 1px
				top 0
				left 0
		&.left-bottom
			float left
			padding 63px 0 53px 11px
			.text-content
				margin 15px 0 0 35px
			img
				width 190px
			&:after
				border-right-width 1px
				right 0
				bottom 0
		&.right-bottom
			display flex
			float right
			img
				width 230px
			.text-content
				margin 29px 0 0 26px
			&:after
				border-top-width 1px
				top 0
				right 0