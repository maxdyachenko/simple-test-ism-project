.not-ad-wrap
	padding-bottom 180px
	.icon
		text-align center
	.lnr-cart
		text-align center
		color COLOR_BRAND_WHITE
		font-size 120px
	.content
		position relative
		max-width 640px
		margin 30px auto 0 auto
		border 1px solid COLOR_BRAND_LIGHT_ORANGE2
		padding 5px
		overflow hidden
	.title
		color COLOR_BRAND_DARK_GREY2
		font 400 18px / 1.3 'Catamaran'
	.price
		margin-top 10px
		color COLOR_BRAND_GREEN
		font 400 30px / 1.2 'Open Sans'
		small
			position relative
			top -7px
			font-size 20px
	.center
		position absolute
		top 50%
		left 50%
		transform translate3d(-50%,-50%,0)
		width 31%
		display inline-block
		padding 3.5% 3.8% 2% 3.8%
		background COLOR_BRAND_GREEN
		border-radius 5px
		&:after
			content ''
			display block
			padding-bottom 100%
	.center-content
		display flex
		flex-direction column
		justify-content center
		position absolute
		top 0
		left 0
		width 100%
		height 100%
	.cart-title
		text-align center
		color COLOR_BRAND_WHITE
		font 400 30px / 1.2 'Gotham XLight'
		letter-spacing -2px
	.block-65
		width 65%
		&:after
			width 49%

	.block-35
		width 35%
		&:after
			height 44%
	.block
		position relative
		&:after
			position absolute
			content ''
			border-style solid
			border-color COLOR_BRAND_GREEN
			border-width 0 0 0 0
		img
			height 100%
		&.left-top
			display flex
			align-items center
			flex-direction row-reverse
			justify-content flex-end
			padding 1.8% 4.8% 3.6% 1.2%
			float left
			&:after
				bottom 0
				border-bottom-width 1px
			img
				width 68%
			.text-content
				width 61px
				margin-top 5%
				margin-right 4%
		&.right-top
			display flex
			align-items center
			flex-direction column-reverse
			float right
			padding 7.5% 0 7.5% 3%
			img
				width 56%
			.price
				margin 10px 0
			&:after
				border-left-width 1px
				top 0
				left 0
		&.left-bottom
			float left
			padding 10% 0 8.5% 2%
			.text-content
				margin 7% 0 0 15%
			img
				width 86%
			&:after
				border-right-width 1px
				right 0
				bottom 0
		&.right-bottom
			display flex
			float right
			padding-top 2%
			img
				width 58%
			.text-content
				margin 7% 0 0 6.8%
			&:after
				border-top-width 1px
				top 0
				right 0

@media (max-width: 768px)
	.not-ad-wrap
		padding-bottom 100px
@media (max-width: 600px)
	.not-ad-wrap
		.cart-title
			font-size 23px
		.lnr-cart
			font-size 100px
		.price small
			font-size inherit
			top 0

@media (max-width: 480px)
	.not-ad-wrap
		.title
			font-size 15px
		.price
			font-size 20px
		.cart-title
			font-size 18px
		.lnr-cart
			font-size 80px
		.block.right-top
			padding-bottom 4%
@media (max-width: 380px)
	.not-ad-wrap
		.cart-title
			font-size 16px
		.title
			font-size 10px
		.price
			font-size 15px
		.lnr-cart
			font-size 60px