.items-list-wrap
	.lead
		padding-bottom 15px
		color COLOR_BRAND_DARK_GREY
		text-align center
		font 400 15px / 1.2 'Catamaran'
	.content
		padding-top 10px
	.thumb
		display block
		overflow hidden
	ul
		display flex
		justify-content space-between
		flex-wrap wrap
	li
		position relative
		margin-top 22px
		flex-basis 15%
	img
		width 63px
		height @width
		margin auto
		object-fit cover
		zoom 1.4
		border-radius 50%
	.name
		margin-top 15px
		text-align center
		font 400 15px / 1.2 'Catamaran'
		color COLOR_BRAND_DARK_BLACK
		&:before
			position relative
			left -7px
			bottom 3px
			content ''
			display inline-block
			border solid COLOR_BRAND_LIGHT_ORANGE
			border-width 0 1px 1px 0
			padding 2px
			transform rotate(-45deg)