.items-list-wrap
	.lead
		padding-bottom 15px
		color COLOR_BRAND_DARK_GREY
		text-align center
		font 400 15px / 1.2 'Catamaran'
	.content
		padding 10px 40px 0 40px
	.thumb
		display block
		overflow hidden
	ul
		display flex
		justify-content space-between
		flex-wrap wrap
	li
		position relative
		margin-top 22px
		flex-basis 15%
	img
		width 88px
		height @width
		margin auto
		object-fit cover
		border-radius 50%
	.name
		margin-top 15px
		text-align center
		font 400 15px / 1.2 'Catamaran'
		color COLOR_BRAND_DARK_BLACK
@media (max-width: 1024px)
	.items-list-wrap
		.content
			padding 10px 20px 0 20px
@media (max-width: 768px)
	.items-list-wrap
		li
			flex-basis 20%
@media (max-width: 600px)
	.items-list-wrap
		li
			flex-basis 33%

@media (max-width: 380px)
	.items-list-wrap
		.content
			padding 10px 10px 0

@media (max-width: 320px)
	.items-list-wrap
		li
			flex-basis 50%
